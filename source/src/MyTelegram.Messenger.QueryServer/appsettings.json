{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "mongodb://localhost:27017?maxPoolSize=10000"
  },
  "App": {
    "QueryServerEventStoreDatabaseName": "tg-query", // query server event store db
    "QueryServerReadModelDatabaseName": "tg-query", // query server readmodel db(pts,updates,rpcresults)
    "DatabaseName": "tg", // messenger readmodel
    "BotDatabaseName": "tg",
    "FileServerAppId": "file-server",
    "FileServerGrpcServiceUrl": "http://localhost:10001",
    "IdGeneratorGrpcServiceUrl": "http://localhost:10002",
    "MessengerServerGrpcServiceUrl": "http://localhost:10003",
    "FixedVerifyCode": 12345,
    "ConfirmEmailLoginCount": 10,
    //will use the fixed verify code if value is not empty
    "JoinChatDomain": "https://t.mytelegram.top",
    "ChannelGetDifferenceIntervalSeconds": 60,
    "UseInMemoryFilters": true,
    "BlockedCountMax": 1000000,
    //total max blocked count
    "ChatSizeMax": 100,
    //Maximum member count for normal groups
    "MegagroupSizeMax": 200000,
    //Maximum member count for supergroups
    "EditTimeLimit": 172800,
    //172800 Only messages with age smaller than the one specified can be edited
    "ForwardedCountMax": 50,
    "PinnedDialogsCountMax": 5,
    "PinnedInfolderCountMax": 100,
    "CaptionLengthMax": 1024,
    "MessageLengthMax": 4096,
    "IsMediaDc": false,
    "UploadRootPath": "",
    "MinLayer": 158,
    // if true,call createChat will auto create super group
    "AutoCreateSuperGroup": true,
    "WebRtcConnections": [
      {
        "Ip": "127.0.0.1",
        "Ipv6": "",
        "Port": 20444,
        "Turn": true,
        "Stun": true,
        "UserName": "a",
        "Password": "b"
      }
    ],
    "ThisDcId": 1,
    "DcOptions": [
      {
        "Id": 1,
        "IpAddress": "127.0.0.1",
        "Port": 20443,
        "TcpoOnly": true,
        "Ipv6": false,
        "Cdn": false,
        "MediaOnly": false,
        "Static": false
      },
      {
        "Id": 2,
        "IpAddress": "127.0.0.1",
        "Port": 20443,
        "TcpoOnly": true,
        "Ipv6": false,
        "Cdn": false,
        "MediaOnly": false,
        "Static": false
      }
    ]
  },
  "RabbitMQ": {
    "Connections": {
      "Default": {
        "HostName": "localhost",
        "Port": 5672,
        "UserName": "guest",
        "Password": "guest"
      }
    },
    "EventBus": {
      "ClientName": "MyTelegramMessengerQueryServer",
      "ExchangeName": "MyTelegramExchange"
    }
  },
  "Redis": {
    "Configuration": "localhost:6379"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Debug",
        "EventFlow": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}",
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
              }
            }
          ]
        }
      },
      //{
      //  "Name": "Async",
      //  "Args": {
      //    "configure": [
      //      {
      //        "Name": "File",
      //        "Args": {
      //          "rollingInterval": "Day",
      //          //"buffered": true,
      //          "path": "./Logs/log-.txt",
      //          "outputTemplate": "{Timestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}"
      //        }
      //      }
      //    ]
      //  }
      //}
    ]
  }
}